<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:background="#E4DFDF"
    app:cardCornerRadius="6dp"
    app:cardElevation="6dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:orientation="horizontal">


    <ImageView
        android:id="@+id/ideaCover"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_gravity="center"
        android:layout_margin="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/idea" />

    <TextView
        android:id="@+id/ideaTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="20dp"
        android:layout_weight="1"
        android:text="Title"
        android:textSize="17sp"
        app:layout_constraintStart_toEndOf="@+id/ideaCover"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/ideaAuthor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center_horizontal|center_vertical"
        android:text="author"
        app:layout_constraintStart_toStartOf="@+id/ideaTitle"
        app:layout_constraintTop_toBottomOf="@+id/ideaTitle" />

    <TextView
        android:id="@+id/ideaForks"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="5dp"
        android:layout_weight="1"
        android:gravity="center"
        android:text="forks"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/ideaContext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_weight=".3"
        android:text="context"
        app:layout_constraintStart_toStartOf="@+id/ideaAuthor"
        app:layout_constraintTop_toBottomOf="@+id/ideaAuthor" />

    <TextView
        android:id="@+id/ideaContents"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:text="contents"
        app:layout_constraintStart_toStartOf="@+id/ideaContext"
        app:layout_constraintTop_toBottomOf="@+id/ideaContext" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.appcompat.widget.LinearLayoutCompat>